{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "Preserve",
    "target": "ESNext",
    "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": [
    "**/*.ts",
    "**/*.mjs",
    "**/*.js",
    "**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}